<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Personal Details">

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="Your Name Please..."
            android:inputType="textCapWords"
            android:key="name"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Your Name " />

        <ListPreference
            android:defaultValue="Select a campus"
            android:entries="@array/campuses"
            android:entryValues="@array/campuses"
            android:key="campus"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Your Campus" />

        <ListPreference
            android:defaultValue="Select a department"
            android:entries="@array/departments"
            android:entryValues="@array/departments"
            android:key="department"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Your Department" />

        <ListPreference
            android:defaultValue="Select a school"
            android:entries="@array/schools"
            android:entryValues="@array/schools"
            android:key="school"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Your School" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Amrita Explorer">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="explorer_update"
            android:summary="Auto Update your location for Amrita Explorer (NOTE: It will Work ONLY if you are near Amrita Campus) "
            android:title="Auto Update Your Location" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Third Party Libraries">
        <Preference
            android:summary="Licensed under the Apache License 2.0"
            android:title="Application Crash Reporting for Android (ACRA)"/>
        <Preference
            android:summary="Licensed under the Apache License 2.0"
            android:title="Joda Time"/>
        <Preference
            android:summary="Licensed under the MIT License"
            android:title="jsoup"/>
    </PreferenceCategory>

</PreferenceScreen>