<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:val="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <include layout="@layout/toolbar" android:id="@+id/toolbar"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:scrollbarStyle="outsideInset"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:id="@+id/aumsLinearView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Username:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="10dp" />

            <com.andreabaccega.widget.FormEditText
                android:id="@+id/roll_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                val:emptyErrorString="You must enter your Roll Number"
                val:testErrorString="Enter a proper Roll Number"
                android:ems="10"
                android:textAllCaps="true"
                android:hint="Your Full Roll Number ..."
                val:testType="alphaNumeric"
                android:inputType="textCapCharacters|text|textNoSuggestions|textFilter"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Password:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="5dp" />

            <com.andreabaccega.widget.FormEditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                val:emptyErrorString="You must enter your Password"
                val:testErrorString="Enter a proper Password"
                android:ems="10"
                android:hint="Your AUMS password ..."
                val:testType="nocheck"
                android:inputType="textPassword"  />

            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom|right"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:background="@color/button_bar_grey" >

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="exit"
                    android:drawableLeft="@drawable/previous"
                    android:text="Exit" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="configureAuto"
                    android:drawableRight="@drawable/next"
                    android:focusable="true"
                    android:text="Proceed" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="(or)"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom|right"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:background="@color/button_bar_grey" >

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="manualConfigure"
                    android:text="Configure Manually" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>